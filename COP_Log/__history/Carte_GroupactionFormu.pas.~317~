begin
  //if (adodataset5.fieldbyname('act_issue3g').value=frmCarte_Main.lbluser.caption) or (frmcarte_main.lbluser='ADMIN') then
  //if (adodataset2.State=dsEdit) or (adodataset2.State=dsInsert) then adodataset2.Post;
